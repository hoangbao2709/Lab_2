uint8_t* getChar(char str) {
    switch (str) {
        case 'A': return ChuA;
        case 'B': return ChuB;
        case 'C': return ChuC;
        case 'D': return ChuD;
        case 'E': return ChuE;
        case 'F': return ChuF;
        case 'G': return ChuG;
        case 'H': return ChuH;
        case 'I': return ChuI;
        case 'J': return ChuJ;
        case 'K': return ChuK;
        case 'L': return ChuL;
        case 'M': return ChuM;
        case 'N': return ChuN;
        case 'O': return ChuO;
        case 'P': return ChuP;
        case 'Q': return ChuQ;
        case 'R': return ChuR;
        case 'S': return ChuS;
        case 'T': return ChuT;
        case 'U': return ChuU;
        case 'V': return ChuV;
        case 'W': return ChuW;
        case 'X': return ChuX;
        case 'Y': return ChuY;
        case 'Z': return ChuZ;
        case ' ': return DauCach;
        case '0': return DauCach;
        case '1': return so1;
        case '2': return so2;
        case '3': return so3;
        case '4': return so4;
        case '5': return so5;
        case '6': return so6;
        case '7': return so7;
        case '8': return so8;
        case '9': return so9;
        default: return NULL;
    }
}

void updateLEDMatrix (int index ){
	uint8_t *binary_array_1 = convert_to_binary_array(so8[index]);
	GetCOL(binary_array_1);
	free(binary_array_1);
}
